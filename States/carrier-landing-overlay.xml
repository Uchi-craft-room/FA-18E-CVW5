<PropertyList>
  <name type="string" n="0">carrier-approach</name>
  <description type="string">Final approach to a carrier landing.  Everything out - gear, flaps, speed-brakes, tailhook</description>
  <overlay>
    <fdm>
      <yasim>
        <respect-external-gear-state>true</respect-external-gear-state>
      </yasim>
    </fdm>
    <controls>
      <engines>
        <engine n="0">
          <throttle>0.75</throttle>
        </engine>
        <engine n="1">
          <throttle>0.75</throttle>
        </engine>
      </engines>
      <flight>
        <elevator>-0.85</elevator>
        <flaps>1.0</flaps>
        <speedbrake>0.0</speedbrake>
        <wing-fold>0.0</wing-fold>
      </flight>
      <gear>
        <tailhook>true</tailhook>
        <gear-down>true</gear-down>
        <brake-parking>0</brake-parking>
      </gear>
      <lighting>
  			<beacon>1</beacon>
  			<taxi-light>0</taxi-light>
  		</lighting>
    </controls>
    <canopy>
      <position-norm>0.0</position-norm>
    </canopy>
    <orientation>
      <pitch-deg>-5</pitch-deg>
    </orientation>
  </overlay>
</PropertyList>
